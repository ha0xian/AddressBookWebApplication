@model AddressBookViewModel
<h1>Edit the details here</h1>

<div class="row">
    <div class="col-12">


        <div class="card">
            <div class="card-header">
            </div>


            <div class="card-body">
                @using (Html.BeginForm("Edit", "AddressBook", FormMethod.Post))
                {
                    <div class="mb-3">
                        @Html.LabelFor(m => m.first_name, "First Name")
                        @Html.TextBoxFor(m => m.first_name, new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.last_name, "Last Name")
                        @Html.TextBoxFor(m => m.last_name, new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.phone, "Phone")
                        @Html.TextBoxFor(m => m.phone, new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.email, "Email")
                        @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        <input class="btn btn-success" type="submit" value="Save" />
                    </div>
                }
                <hr />


            </div>


            <div class="card-footer">
            </div>


        </div>

    </div>
</div>