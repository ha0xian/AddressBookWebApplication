@model AddressBookViewModel

<h1>Add your addresses here</h1>

<div class="row">
    <div class="col-12">


        <div class="card">
            <div class="card-header">
            </div>

            <div class="card-body">
                <form asp-controller="AddressBook" asp-action="AddAddress" method="post">
                    <div>
                        <label class="form-label">First Name</label>
                        <input asp-for=first_name type="text" class="form-control" />
                    </div>

                    <div>
                        <label class="form-label">Last Name</label>
                        <input asp-for=last_name type="text" class="form-control" />
                    </div>

                    <div>
                        <label class="form-label">Email Address</label>
                        <input asp-for=email type="text" class="form-control" />
                    </div>

                    <div>
                        <label class="form-label">Phone No.</label>
                        <input asp-for=phone type="text" class="form-control" />
                    </div>

                    <hr />

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="reset" class="btn btn-primary">Clear</button>
                    </div>
                </form>
            </div>


            <div class="card-footer">
            </div>


        </div>

    </div>
</div>